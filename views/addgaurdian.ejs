<style>
    body{
        background-color: rgb(125, 31, 248);
    }
    .main{
        justify-content: center;
        text-align: center;
        width: 250px;
        margin-inline: auto;
        height: 100vh;
        color: white;
        margin-top: 30px;
       
    }
